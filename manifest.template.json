  "tasks": [{
    "name": "ssh execute (agent)",
    "description": "Run A Shell Command Via SSH",
    "license": "Apache 2.0",
    "author":  "Doug Henderson, Kelly Plumer",
    "version": "updated at build time",
    "class":   "MaestroDev::Plugin::SSHWorker",
    "type":    "ruby",
    "dependencies":[
    ],
    "task":{
      "command": "/ssh/execute",
      "inputs": {
        "host": {
          "description": "Hostname Of The Remote Server",
          "required": false,
          "type": "String",
          "value": "localhost"
        },
        "port": {
          "description": "Port Of The Remote Server",
          "required": false,
          "type": "Integer",
          "value": null
        },
        "user": {
          "description": "User To Authenticate As",
          "required": true,
          "type": "String",
          "value": ""
        },
        "key_path": {
          "description": "Key Used For Authentication",
          "required": false,
          "type": "String",
          "value": ""
        },
        "key_type": {
          "description": "Type Of Key Encryption",
          "required": false,
          "type": "String",
          "value": ""
        },
        "password": {
          "description": "Password To Use For Login To Remote",
          "required": false,
          "type": "Password",
          "value": ""
        },
        "retries": {
          "description": "Times To Retry Connection",
          "required": false,
          "type": "Integer",
          "value": 10
        },
        "wait": {
          "description": "Time To Wait For Connection (Seconds)",
          "required": false,
          "type": "Integer",
          "value": 10
        },
        "ignore_errors": {
          "description": "Ignore Individual Command Errors",
          "required": false,
          "type": "Boolean",
          "value": false
        },
        "commands": {
          "description": "Set Of Shell Commands",
          "required": true,
          "type": "Array",
          "value": []
        },
        "update_host_key": {
          "description": "Attempt to update the ssh host-key if mismatch detected",
          "required": false,
          "type": "Boolean",
          "value": false
        }
      },
      "outputs": {"output" : {"type" : "String"}},
      "tool_name": "SSH",
      "icon": "ssh-execute.png"
    }
  },
